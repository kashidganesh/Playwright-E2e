pipeline {
  agent any
  stages {
    stage('Checkout') {
      steps {
        git 'https://github.com/ganeshkashid/playwright-e2e.git'
      }
    }
    stage('Install Dependencies') {
      steps {
        sh 'npm install'
      }
    }
    stage('Run Tests') {
      steps {
        sh 'npx playwright test'
      }
    }
    stage('Generate Allure Report') {
      steps {
        sh 'npm run report'
      }
    }
  }
  post {
    always {
      archiveArtifacts artifacts: 'tests/reports/**', allowEmptyArchive: true
    }
  }
}
