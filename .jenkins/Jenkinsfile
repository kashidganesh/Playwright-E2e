pipeline {
    agent any

    tools {
        nodejs "Node18"
    }

    parameters {
        choice(
            name: 'TEST_SUITE',
            choices: ['sanity', 'regression'],
            description: 'Select which test suite to run'
        )
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/kashidganesh/Playwright-E2e.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }

        stage('Install Browsers') {
            steps {
                bat 'npx playwright install'
            }
        }

        stage('Run Tests with Trace') {
            steps {
                script {
                    echo "Running ${params.TEST_SUITE} test suite..."
                    bat "npx playwright test --grep @${params.TEST_SUITE} --reporter=html --trace on"
                }
            }
        }

        stage('Zip Trace Files') {
            steps {
                bat '''
                if exist playwright-report\\trace (
                    powershell Compress-Archive -Path playwright-report\\trace\\* -DestinationPath playwright-report\\trace.zip -Force
                )
                '''
            }
        }

        stage('Archive Full Folder Silently') {
            steps {
                // Archive, but Jenkins wonâ€™t list individual files if pattern doesn't directly match them
                archiveArtifacts artifacts: 'playwright-report/**', fingerprint: true, allowEmptyArchive: true, onlyIfSuccessful: true
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed.'
        }
    }
}
