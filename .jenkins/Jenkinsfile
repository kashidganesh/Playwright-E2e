pipeline {
    agent any

    tools {
        nodejs "Node18"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/kashidganesh/Playwright-E2e.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }

        stage('Install Browsers') {
            steps {
                bat 'npx playwright install'
            }
        }

        stage('Run Tests with Trace & HTML Report') {
            steps {
                // Run tests with HTML reporter, trace enabled, and set output folder
                bat 'npx playwright test --reporter=html --trace on --output=playwright-report/html'
            }
        }

        stage('Publish HTML Report') {
            steps {
                // Publish Playwright HTML report in Jenkins
                publishHTML(target: [
                    reportDir: 'playwright-report/html',
                    reportFiles: 'index.html',
                    reportName: 'Playwright Test Report'
                ])
            }
        }

        stage('Archive Full Report') {
            steps {
                // Archive everything including traces
                archiveArtifacts artifacts: 'playwright-report/**', allowEmptyArchive: true
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed.'
        }
    }
}
