pipeline {
    agent any

    parameters {
        choice(name: 'SUITE', choices: ['@sanity', '@regression'], description: 'Select test suite to run')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t playwright-e2e .'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'docker run --rm -v $WORKSPACE:/app playwright-e2e npx playwright test --grep ${params.SUITE}'
            }
        }

        stage('Archive Reports') {
            steps {
                archiveArtifacts artifacts: 'playwright-report/**', fingerprint: true
                archiveArtifacts artifacts: 'test-results/**/*.zip', fingerprint: true
            }
        }
    }

    post {
        always {
            echo 'Cleaning up...'
        }
    }
}
