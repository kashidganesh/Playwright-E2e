pipeline {
    agent any

    tools {
        nodejs "Node18"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/kashidganesh/Playwright-E2e.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }

        stage('Install Browsers') {
            steps {
                bat 'npx playwright install'
            }
        }

        stage('Run Tests with Trace') {
            steps {
                // Run tests with HTML report and tracing enabled
                bat 'npx playwright test --reporter=html --trace on'
            }
        }

        stage('Zip Trace Files') {
            steps {
                // Zip the trace files generated by Playwright
                bat '''
                if exist playwright-report\\trace (
                    powershell Compress-Archive -Path playwright-report\\trace\\* -DestinationPath playwright-report\\trace.zip -Force
                )
                '''
            }
        }

        stage('Archive Full Report & Traces') {
            steps {
                // Archive everything including HTML report and zipped trace file
                archiveArtifacts artifacts: 'playwright-report/**', allowEmptyArchive: true
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed.'
        }
    }
}
